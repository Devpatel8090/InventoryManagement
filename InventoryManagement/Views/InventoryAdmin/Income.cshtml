                    <select class="form-select form-select-sm mt-3" asp-for="@Model.InventoryItemPrice.ItemId" id="ItemIdOfInventoryPrice" onchange="GetPriceOfSelectedItem()" aria-label=".form-select-sm example">
                        <option>Open this select menu</option>
                        @foreach (var item in @Model.InventoryItems)
                        {
                            <option value="@item.ItemId">@item.ItemName</option>
                        }
                    </select>
                    
                    
                    <div class="form-floating mt-3">
                        <input asp-for="@Model.InventoryItemPrice.Price" type="text" class="form-control" id="ItemPrice">
