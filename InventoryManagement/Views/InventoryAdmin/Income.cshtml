        <div class="modal-content">
            <form asp-action="AddInventoryItem" asp-controller="InventoryAdmin">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalToggleLabel2">Add or Update InventoryItems</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input asp-for="@Model.InventoryItem.ItemId" type="text" id="itemId" hidden />
                    <div class="form-floating mb-3">
                        <input asp-for="@Model.InventoryItem.ItemName" type="text" class="form-control" id="itemName">
                        <label for="floatingInput">ItemName</label>
                        <span asp-validation-for="@Model.InventoryItem.ItemName" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <textarea asp-for="@Model.InventoryItem.Description" class="form-control" id="itemDescription"></textarea>
                        <span asp-validation-for="@Model.InventoryItem.Description" class="text-danger"></span>
                        <label for="floatingTextarea">Description</label>
                    </div>
                    <select class="form-select form-select-sm mt-3" asp-for="@Model.InventoryItem.CategoryId" id="ItemCategory" aria-label=".form-select-sm example">
                        <option>Open this select menu</option>
                        @foreach (var item in @Model.Categories)
                        {
                            <option value="@item.CategoryId">@item.CategoryName</option>
                        }
                    </select>
                    <select asp-for="@Model.InventoryItem.IsActive" class="form-select form-select-sm mt-3" id="ItemActive" aria-label=".form-select-sm example">

                        <option value="true">Active</option>
                        <option value="false">InActive</option>
                    </select>


                </div>
                <div class="modal-footer">
                    <button class="btn bg__colour" type="submit">submit</button>
                </div>
            </form>
        </div>
    </div>
</div>



