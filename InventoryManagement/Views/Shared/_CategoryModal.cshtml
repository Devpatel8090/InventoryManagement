@model IncomeViewModel





@{

    <div>
        <table class="table mt-3">

            <thead>
                <tr>
                    <td>
                        NAME
                    </td>
                    <td>

                        CATEGORY
                    </td>

                </tr>


            </thead>
            @if (Model.Categories.Count() > 0)
            {
                var collection = @Model.Categories.Take(3);

                for (int item = 0; item <= (@collection.Count() - 1); item++)
                {
                    <tr value="@collection.ElementAt(item).CategoryId" id="CategoryRow_@collection.ElementAt(item).CategoryId" onclick="selectCategory()">
                        <td value="@collection.ElementAt(item).CategoryId">
                            @collection.ElementAt(item).CategoryName
                        </td>
                        <td value="@collection.ElementAt(item).CategoryId">
                            @collection.ElementAt(item).Description
                        </td>

                    </tr>

                }
            }
            else
            {
                <tr>
                <td colspan="2" class="text-center text-danger"> No Data Found !!</td>
                </tr>
                
            }
        </table>
    </div>
    <div class="" id="CategoryPaginationAfterSearch">
        <partial name="_PaginationCategory" model="@Model" />
    </div>









}






