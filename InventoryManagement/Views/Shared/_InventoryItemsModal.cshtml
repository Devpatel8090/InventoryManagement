                    <div>
                        <input type="text" id="searchInput" />
                        <button onclick="SearchCategory()" class="border-0 bg-transparent">Search</button>
                    </div>
                </div>
                <table class="table mt-3">

                    <thead>
                        <tr>
                            <td>
                                ItemName
                            </td>
                            <td>
                                ItemDescription
                            </td>
                            <td>
                                ItemCategory
                            </td>

                        </tr>


                    </thead>
                    <tbody>
                        @*<tr class="table-active">
                            <td>132</td>
                            <td>ABC</td>
                            </tr>
                            <tr>

                            <td >Larry the Bird</td>
                            <td>FGDSFGDSFGDSFGD</td>
                            </tr>*@
                        @foreach (var item in @Model.InventoryItems)
                        {
                            <tr value="@item.ItemId" id="CategoryRow_@item.ItemId" onclick="selectInventoryItem()">
                                <td value="@item.ItemId">
                                    @item.ItemName
                                </td>
                                <td value="@item.ItemId">
                                    @item.Description
                                </td>
                                <td value="@item.ItemId">
                                    @item.CategoryName
                                </td>

                            </tr>

                        }

                    </tbody>
                </table>

                @* <div class="d-flex gap-3 align-items-center justify-content-center">
                    <button class="border-0 bg-transparent" onclick="findPageNumber(this)" value="Previous">previous</button>
                    <button class="border-0 bg-transparent" id="currentPageNo">1</button>
                    <button class="border-0 bg-transparent" onclick="findPageNumber(this)" value="Next">next</button>
                    </div>*@
                <div>
                    <nav aria-label="Page navigation example" id="Pagination">
                        <ul class="pagination d-flex justify-content-center mt-3">
                            <li class="page-item" style="cursor:pointer">
                                <a class="page-link curser-pointer" aria-label="Previous" onclick="PreviousPage()" style="cursor:pointer">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            @for (var i = 0; i <= (Model.InventoryItems.Count() / 9); i++)
                            {
                                <li class="page-item" style="cursor:pointer"><a class="page-link  curser-pointer" data-value="@(i)" id="currentPageNo" onclick="AddPagination()">@(i+1)</a></li>
                            }


                            <li class="page-item" style="cursor:pointer">
                                <a class="page-link curser-pointer" aria-label="Next" onclick="NextPointer()" style="cursor:pointer">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>

                </div>
            </div>
            @*<div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Understood</button>
                </div>*@
        </div>
    </div>
</div>
<div class="modal fade" id="InventoryAddModal" aria-hidden="true" aria-labelledby="exampleModalToggleLabel2" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <form asp-action="AddInventoryItem" asp-controller="InventoryAdmin">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalToggleLabel2">Add or Update Category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input asp-for="@Model.InventoryItem.ItemId" type="text" id="itemId" hidden />
                    <div class="form-floating mb-3">
                        <input asp-for="@Model.InventoryItem.ItemName" type="text" class="form-control" id="itemName">
                        <label for="floatingInput">ItemName</label>
                        <span asp-validation-for="@Model.InventoryItem.ItemName" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <textarea asp-for="@Model.InventoryItem.Description" class="form-control" id="itemDescription"></textarea>
                        <span asp-validation-for="@Model.InventoryItem.Description" class="text-danger"></span>
                        <label for="floatingTextarea">Description</label>
                    </div>
                    <select class="form-select form-select-sm mt-3" asp-for="@Model.InventoryItem.CategoryId" id="ItemCategory" aria-label=".form-select-sm example">
                        <option>Open this select menu</option>
                        @foreach (var item in @Model.Categories)
                        {
                            <option value="@item.CategoryId">@item.CategoryName</option>
                        }
                    </select>
                    <select asp-for="@Model.InventoryItem.IsActive" class="form-select form-select-sm mt-3" id="ItemActive" aria-label=".form-select-sm example">
                        
                        <option value="true">Active</option>
                        <option value="false">InActive</option>
                    </select>


                </div>
                <div class="modal-footer">
                    <button class="btn bg__colour" type="submit">submit</button>
                </div>
            </form>
        </div>
    </div>
</div>